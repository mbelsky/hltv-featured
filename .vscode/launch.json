{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend",
      "program": "${workspaceFolder}/src/backend/backend.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Notifier",
      "program": "${workspaceFolder}/src/notifier/notifier.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Scraper",
      "program": "${workspaceFolder}/src/scraper/scraper.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Scraper",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "src/scraper/__tests__/"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest active file",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "${relativeFile}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
